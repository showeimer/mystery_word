<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mystery Word Game</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="wrapper">
      <header>
        <h3>Mystery Word</h1>
        <h3>You have {{guesses}} guess(es) left</h2>
      </header>

      <div class="gameScreen">
        <h1 id="blank">{{blank}}</h1>
        <form action="/guess" method="post">
          <input type="text" name="userGuess" value="">
          <button>Guess</button>
        </form>
        {{#error}}
          <h4 id="errorMessage">{{.}}</h4>
        {{/error}}
        <h4>{{errorMessage}}</h4>
      </div>

      <div class="lettersGuessed">
        <h3>Letters guessed:  </h3>
        <section class="letterBank">
          {{#lettersGuessed}}
          <span>{{.}}<span>
          {{/lettersGuessed}}
        </section>
      </div>

    </div>
  </body>
</html>
